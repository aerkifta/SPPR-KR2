@page
@model WEB_253551_KORZUN.UI.Areas.Admin.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить запчасть</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarPart.Name" class="control-label">Наименование</label>
                <input asp-for="CarPart.Name" class="form-control" />
                <span asp-validation-for="CarPart.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarPart.Description" class="control-label">Описание</label>
                <input asp-for="CarPart.Description" class="form-control" />
                <span asp-validation-for="CarPart.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarPart.Price" class="control-label">Цена</label>
                <input asp-for="CarPart.Price" class="form-control" />
                <span asp-validation-for="CarPart.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarPart.CategoryId" class="control-label">Категория</label>
                <select asp-for="CarPart.CategoryId" class="form-control" asp-items="Model.Categories">
                    <option value="">-- Выберите категорию --</option>
                </select>
                <span asp-validation-for="CarPart.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Изображение</label>
                <div class="custom-file">
                    <input asp-for="Image" class="custom-file-input" type="file" accept="image/*" />
                    <label class="custom-file-label" for="customFile">Выберите файл</label>
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
