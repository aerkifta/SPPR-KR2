@page
@model WEB_253551_KORZUN.UI.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Редактирование запчасти";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarPart.Id" />

            <div class="form-group">
                <label asp-for="CarPart.Name" class="control-label">Наименование</label>
                <input asp-for="CarPart.Name" class="form-control" />
                <span asp-validation-for="CarPart.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CarPart.Description" class="control-label">Описание</label>
                <input asp-for="CarPart.Description" class="form-control" />
                <span asp-validation-for="CarPart.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CarPart.Price" class="control-label">Цена</label>
                <input asp-for="CarPart.Price" class="form-control" />
                <span asp-validation-for="CarPart.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CarPart.CategoryId" class="control-label">Категория</label>
                <select asp-for="CarPart.CategoryId" class="form-control" asp-items="Model.Categories">
                    <option value="">-- Выберите категорию --</option>
                </select>
                <span asp-validation-for="CarPart.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Новое изображение</label>
                <input asp-for="Image" class="form-control" type="file" accept="image/*" />
                <small class="form-text text-muted">Оставьте пустым, чтобы не менять текущее изображение</small>
            </div>

            @if (!string.IsNullOrEmpty(Model.CarPart.Image))
            {
                <div class="form-group">
                    <label class="control-label">Текущее изображение</label>
                    <div>
                        <img src="@Model.CarPart.Image" alt="Изображение" style="max-width: 200px;" class="img-thumbnail" />
                    </div>
                </div>
            }

            <div class="form-group mt-5">
                <input type="submit" value="Сохранить" class="btn btn-warning" />
                <a asp-page="./Index" class="btn btn-secondary">Назад к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}