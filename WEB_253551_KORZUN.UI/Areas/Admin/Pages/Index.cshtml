@page
@model WEB_253551_KORZUN.UI.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Управление запчастями";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Добавить новую запчасть
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена</th>
            <th>Изображение</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CarParts.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Image))
                    {
                        <img src="@item.Image" alt="@item.Name" style="max-width: 100px; max-height: 100px;" class="img-thumbnail" />
                    }
                    else
                    {
                        <span class="text-muted">Нет изображения</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil"></i> Изменить
                        </a>

                        <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Удалить
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.CarParts.TotalPages > 1)
{
    <nav aria-label="Навигация по страницам">
        <ul class="pagination justify-content-center">
            @{
                int prevPage = Model.CarParts.CurrentPage > 1 ? Model.CarParts.CurrentPage - 1 : 1;
            }
            <li class="page-item @(Model.CarParts.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-page="./Index"
                   asp-route-pageNo="@prevPage">
                    &laquo;
                </a>
            </li>

            @for (int i = 1; i <= Model.CarParts.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CarParts.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-page="./Index"
                       asp-route-pageNo="@i">
                        @i
                    </a>
                </li>
            }

            @{
                int nextPage = Model.CarParts.CurrentPage < Model.CarParts.TotalPages ? Model.CarParts.CurrentPage + 1 : Model.CarParts.TotalPages;
            }
            <li class="page-item @(Model.CarParts.CurrentPage == Model.CarParts.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-page="./Index"
                   asp-route-pageNo="@nextPage">
                    &raquo;
                </a>
            </li>
        </ul>
    </nav>
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
